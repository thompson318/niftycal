#
# This file sets up include directories, link directories, and
# compiler settings for a project to compile against NiftyCal.
# It should not be included directly, but rather through the 
# NiftyCal_USE_FILE setting obtained from NiftyCalConfig.cmake.
#

if(NiftyCal_BUILD_SETTINGS_FILE AND NOT SKIP_NiftyCal_BUILD_SETTINGS_FILE)
  include(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${NiftyCal_BUILD_SETTINGS_FILE})
endif()

# Add compiler flags needed to use NiftyCal.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${NiftyCal_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${NiftyCal_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${NiftyCal_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${NiftyCal_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${NiftyCal_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use NiftyCal.
include_directories(BEFORE ${NiftyCal_INCLUDE_DIRS} )

# Add link directories needed to use NiftyCal.
link_directories(${NiftyCal_LIBRARY_DIRS})

